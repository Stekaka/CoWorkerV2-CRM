// Collision detection utilities
const GRID_SIZE = 20 // Snap to 20px grid

const snapToGrid = (value: number): number => {
  return Math.round(value / GRID_SIZE) * GRID_SIZE
}

const checkCollision = (rect1: CardLayout, rect2: CardLayout): boolean => {
  // Use a small buffer to prevent edge cases
  const buffer = 2
  return !(rect1.x + rect1.width <= rect2.x + buffer || 
           rect2.x + rect2.width <= rect1.x + buffer || 
           rect1.y + rect1.height <= rect2.y + buffer || 
           rect2.y + rect2.height <= rect1.y + buffer)
}

const findValidPosition = (
  targetLayout: CardLayout,
  allLayouts: Record<string, CardLayout>,
  excludeId: string,
  containerWidth = 1400,
  containerHeight = 1000
): CardLayout => {
  // Try original position first
  let hasCollision = false
  for (const [id, layout] of Object.entries(allLayouts)) {
    if (id === excludeId) continue
    if (checkCollision(targetLayout, layout)) {
      hasCollision = true
      break
    }
  }
  
  if (!hasCollision && targetLayout.x >= 0 && targetLayout.y >= 0 && 
      targetLayout.x + targetLayout.width <= containerWidth && 
      targetLayout.y + targetLayout.height <= containerHeight) {
    return targetLayout
  }
  
  // Try positions in expanding spiral from original position
  const originalX = targetLayout.x
  const originalY = targetLayout.y
  
  for (let radius = GRID_SIZE; radius <= 400; radius += GRID_SIZE) {
    const positions = [
      { x: originalX + radius, y: originalY },           // right
      { x: originalX - radius, y: originalY },           // left  
      { x: originalX, y: originalY - radius },           // up
      { x: originalX, y: originalY + radius },           // down
      { x: originalX + radius, y: originalY - radius },  // top-right
      { x: originalX - radius, y: originalY - radius },  // top-left
      { x: originalX + radius, y: originalY + radius },  // bottom-right
      { x: originalX - radius, y: originalY + radius }   // bottom-left
    ]
    
    for (const pos of positions) {
      const candidateLayout = {
        ...targetLayout,
        x: snapToGrid(Math.max(0, Math.min(pos.x, containerWidth - targetLayout.width))),
        y: snapToGrid(Math.max(0, Math.min(pos.y, containerHeight - targetLayout.height)))
      }
      
      // Check if this position is collision-free
      let valid = true
      for (const [id, layout] of Object.entries(allLayouts)) {
        if (id === excludeId) continue
        if (checkCollision(candidateLayout, layout)) {
          valid = false
          break
        }
      }
      
      if (valid) {
        return candidateLayout
      }
    }
  }
  
  // Last resort: return original position (user will see the overlap issue)
  return targetLayout
}

const resolveCollisions = (
  targetId: string,
  targetLayout: CardLayout,
  allLayouts: Record<string, CardLayout>
): Record<string, CardLayout> => {
  const result = { ...allLayouts }
  
  // First, try to place the target component in a valid position
  const validTargetLayout = findValidPosition(targetLayout, allLayouts, targetId)
  result[targetId] = validTargetLayout
  
  // Then check if any existing components now collide and need to be moved
  for (const [id, layout] of Object.entries(result)) {
    if (id === targetId) continue
    
    if (checkCollision(validTargetLayout, layout)) {
      const newPosition = findValidPosition(layout, result, id)
      result[id] = newPosition
    }
  }
  
  return result
}

